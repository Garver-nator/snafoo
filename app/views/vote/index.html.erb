<!DOCTYPE HTML>
<html lang="en" id="voting-page">
<head>
  <title>Snafoo!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <!-- JQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  
  <ul>
    <li><a href="voting">Voting</a></li>
    <li><a href="suggestions">Suggestions</a></li>
  </ul>
  
  <!-- Page Body -->
  <table id="purchased">
    <tr id="header">
        <th>Purchased</th>
    </tr>
    
    <% if !@snacks %>
      <tr><td><%= flash[:error] %></td></tr>
    <% else %>
      <% @snacks.each do |snack| %>
        <tr>
          <td><%= snack %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
  
  <br>
  <div id="remainingVotes" votes='<%= @remaining_votes %>'><b><%= "Votes remaining: " + @remaining_votes.to_s %></b></div>

  <table id="suggested">
    <tr id="header">
        <th>Snack</th>
        <th>Last Purchased</th>
        <th>Votes</th>
        <th>Vote</th>
    </tr>
    
    <% @suggestions.each do |s| %>
      <tr>
        <td><%= s[:name] %></td>
        <td><%= s[:last_purchase_date] %></td>
        <td class="voteCount" name='<%= s[:name] %>'><%= s[:votes] %></td>
        <td><button class="vote" name='<%= s[:name] %>'>Vote!</button></td>
      </tr>
    <% end %>
  
  </table>

</body>
</html>
